<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light Mode 主題 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--    狀態欄    -->
        <item name="colorPrimary">@color/cl26a889</item>
        <!--    背景    -->
        <item name="backgroundColor">@color/white</item>
        <!--    Status Bar 顏色    -->
        <item name="android:statusBarColor">@color/cl60C395</item>
        <!--    Text 顏色    -->
        <item name="android:textColorPrimary">@color/black</item>



        <!-- 其他屬性 -->
    </style>

     Dark Mode 主題
        <style name="AppTheme.Dark" parent="Theme.AppCompat">
            <!--    狀態欄    -->
            <item name="colorPrimary">@color/cl005B4F</item>
            <!--    Status Bar 顏色    -->
            <item name="android:statusBarColor">@color/cl004A47</item>
            <!--    Text 顏色    -->
            <item name="android:textColorPrimary">@color/white</item>
            <!--    背景    -->
            <item name="backgroundColor">@color/cl00201C</item>
            <!-- 其他屬性 -->
        </style>


    <!--dialog no background android:windowSoftInputMode属性 https://blog.csdn.net/Android_Mnbvcxz/article/details/53558495 -->
    <style name="dialogNobackground" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@color/clf6f6f6</item>
    </style>


    <style name="BottomFade">
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>
</resources>